<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CadastroDisciplinaController"
            stylesheets="@/style/estilos.css"
            styleClass="fundo-landing">

    <top>
        <fx:include source="Navbar.fxml"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" left="40" right="40" bottom="40"/>
            </padding>

            <Label text="Cadastrar Disciplina" styleClass="titulo-galaxy"/>

            <HBox alignment="CENTER" spacing="0" styleClass="card-grande" maxWidth="800">
                <StackPane prefWidth="220" alignment="CENTER" styleClass="card-foto">
                    <ImageView fitWidth="200" preserveRatio="true">
                        <image>
                            <Image url="@/images/disciplina.png"/>
                        </image>
                    </ImageView>

                    <Label text="ðŸ“š" style="-fx-font-size: 48px; -fx-font-weight: bold;"/>
                </StackPane>

                <VBox spacing="15" styleClass="card-form" alignment="CENTER_LEFT" prefWidth="520">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Nome:" styleClass="texto-secundario"/>
                        <TextField fx:id="txtNome" prefWidth="360" styleClass="campo-input"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Salvar" onAction="#salvar" styleClass="botao-roxo"/>
                        <Button text="Voltar" onAction="#voltar" styleClass="botao-roxo"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>

