<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CadastroTarefaController"
            stylesheets="@/style/estilos.css"
            styleClass="fundo-uni">

    <top>
        <fx:include source="navbar.fxml"/>
    </top>

    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
        
            <padding>
                <Insets top="60" right="0" bottom="0" left="0"/>
            </padding>

            <HBox spacing="0" styleClass="card-grande" alignment="CENTER">

                <VBox styleClass="card-foto" alignment="CENTER">
                    <ImageView fitWidth="200" fitHeight="250" preserveRatio="true" pickOnBounds="true" style="-fx-opacity:0.85;">
                        <image>
                            <Image url="@/images/Ctare.gif"/>
                        </image>
                    </ImageView>
                </VBox>

                <VBox spacing="15" styleClass="card-form">

                    <Label text="Cadastrar Tarefa" styleClass="titulo-galaxy"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Nome:" styleClass="texto-secundario"/>
                        <TextField fx:id="txtNome" styleClass="campo-input" prefWidth="280"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Data entrega (AAAA-MM-DD):" styleClass="texto-secundario"/>
                        <TextField fx:id="txtData" styleClass="campo-input" prefWidth="120"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="UrgÃªncia (1-5):" styleClass="texto-secundario"/>
                        <TextField fx:id="txtUrgencia" styleClass="campo-input" prefWidth="80"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Dificuldade (1-5):" styleClass="texto-secundario"/>
                        <TextField fx:id="txtDificuldade" styleClass="campo-input" prefWidth="80"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Disciplina:" styleClass="texto-secundario"/>
                        <ComboBox fx:id="cbDisciplina" styleClass="campo-input" prefWidth="220"/>
                    </HBox>

                    <HBox spacing="20" alignment="CENTER">
                        <Button text="Salvar" onAction="#salvarTarefa" styleClass="botao-roxo" prefWidth="120"/>
                        <Button text="Voltar" onAction="#voltar" styleClass="botao-roxo" prefWidth="120"/>
                    </HBox>

                </VBox>
            </HBox>
        </VBox>
        
    </center>
</BorderPane>

