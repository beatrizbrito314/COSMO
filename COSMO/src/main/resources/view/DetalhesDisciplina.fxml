<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.DetalhesDisciplinaController">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <children>

        <Label fx:id="lblNome" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <Label text="Tarefas:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <ListView fx:id="listaTarefas" prefHeight="300"/>

        <Button text="Voltar" onAction="#voltar"/>

    </children>
</VBox>
